<%- include("templates/cabecera",{titulo:"Editar Usuario"}) %>

<div class="container">
    <% if(error){ %>
        <p><%= mensaje %></p>
        <a href="/usuarios" class="btn btn-dark">Volver</a>
    <% } else { %>

    <h1>Editar Usuario</h1>

    <form action="/usuarios/editar/<%= usuario._id %>" method="POST">
        <input type="text" name="nombre" value="<%= usuario.nombre %>" class="form-control my-2">
        <input type="email" name="correo" value="<%= usuario.correo %>" class="form-control my-2">
        <input type="text" name="rol" value="<%= usuario.rol %>" class="form-control my-2">
        <input type="password" name="contraseña" value="<%= usuario.contraseña %>" class="form-control my-2">

        <button class="btn btn-dark">Guardar cambios</button>
        <a href="/usuarios" class="btn btn-secondary">Cancelar</a>
    </form>

    <% } %>
</div>

<%- include("templates/cierre") %>
